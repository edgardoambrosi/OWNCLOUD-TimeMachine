# Unison preferences
auto = true
batch = true
ignore = Path Desktop/Dev
ignore = Path Desktop/AmbienteSviluppo
ignore = Path Desktop/DevArea
ignore = Path Desktop/DROPBOX
ignore = Path Desktop/GoogleDrive
ignore = Path Desktop/DROPBOX-PERSONAL
ignore = Path Desktop/HOMEWINDOWS
ignore = Path Desktop/MemopalDrive
ignore = Path .unison
ignore = Path .config/google-chrome
ignore = Path .cache/google-chrome

ignore = Name .Memopal/Memopalctrlpipe
ignore = Name .Memopal/Memopalshellextpipe
ignore = Name .TrueCrypt/.show-request-queue
ignore = Name .VeraCrypt/.show-request-queue
ignore = Name .cache/gnome-system-monitor.ambrosi.3945249483
ignore = Name .copy/copyagent-overlay.socket
ignore = Name .dropbox-personale/.dropbox/command_socket
ignore = Name .dropbox-personale/.dropbox/iface_socket
ignore = Name .dropbox-sviluppo/.Memopal/Memopalctrlpipe
ignore = Name .dropbox-sviluppo/.Memopal/Memopalshellextpipe
ignore = Name .dropbox-sviluppo/.TrueCrypt/.show-request-queue
ignore = Name .dropbox-sviluppo/.dropbox/command_socket
ignore = Name .dropbox-sviluppo/.dropbox/iface_socket
ignore = Name .dropbox/command_socket
ignore = Name .dropbox/iface_socket
ignore = Name .xine/session.0


label = Sincronizza volume TC della home linux
#repeat = 30
root = /path/to/folder

#in caso di schema ssh lo script utilizzerà unison
root = ssh://username@hostname///path/to/OWNCLOUD/mirroring/folder
#in caso di schema owncloud lo script utilizzerà il modulo csync owncloud 
root = owncloud://username@hostname///owncloud/remote.php/path/to/folder/

force = /path/to/folder
sshargs = -C

logfile=/var/log/unison/homelinux.log
